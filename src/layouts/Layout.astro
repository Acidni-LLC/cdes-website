            <a href="/" class="text-xl font-bold">CDES</a>
            <div class="hidden md:block ml-10">
              <div class="flex items-baseline space-x-4">
                <a href="/getting-started" class="px-3 py-2 hover:bg-cdes-green-600 rounded-md">Getting Started</a>
                <a href="/sdks" class="px-3 py-2 hover:bg-cdes-green-600 rounded-md">SDKs</a>
                <a href="/cdes-m" class="px-3 py-2 hover:bg-blue-600 rounded-md bg-blue-700">CDES-M</a>
